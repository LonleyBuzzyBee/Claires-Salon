@{
  Layout = "_Layout";
}

@model HairSalon.Models.Client

<h4>Add a new client</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.HairStyle)
  @Html.TextBoxFor(model => model.HairStyle)
  @Html.LabelFor(model => model.StyleTouchup)
  @Html.TextBoxFor(model => model.StyleTouchup)
  @Html.LabelFor(model => model.CostOfTouchup)
  @Html.TextBoxFor(model => model.CostOfTouchup)
  <input type="submit" value="Add new client"/>
}
<p>@Html.ActionLink("Show all clients", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>